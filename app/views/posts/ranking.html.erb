<% @posts.each_with_index do |post, index| %>
  <div>
    <h2><%= index + 1 %>位: <%= post.title %></h2>
    <p><%= image_tag 'LogoMakr-6RtPkf.png' , size: '40x40'%><%= post.likes.count %></p>
  </div>
  <div class="contents row">
    <div class="content_post" style="background-image: url(<%= post.image %>);">
        <%= image_tag post.image, class: "post-img" if post.image.attached? %>
      
      
      <span class="name">
        <a href="/users/<%= post.user.id %>">
          <%= post.user.nickname %>
        </a>
          <span>投稿日</span>
      <span><%= post.created_at.strftime('%Y/%m/%d')%></span>
      </span>
    </div>      
  </div>  
<% end %>

<div class="sell-btn-contents">
  <%=link_to '戻る', root_path, class:"back-btn" %>
</div>
