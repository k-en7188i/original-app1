<%= render "shared/second-header" %>

<% @posts.each_with_index do |post, index| %>
  <div class="contents row">
      
    <div class="nickname-ranking" >
      <h2><%= index + 1 %>位:<%= post.title %></h2>
      <p><%= image_tag 'LogoMakr-6RtPkf.png' , size: '40x40'%><%= post.likes.count %></p>
    </div>
      <ul class='item-lists'>
        <li class='list'>
          <%= image_tag(post.image, alt: 'Post Image', size: "250x250") if post.image.attached? %><br>
          <%= post.title %>（<%= link_to '詳細', post_path(post.id) %>）<br>
          <div class="user-nickname"><%= post.category.name %></div><br>
          <span class="name">
            
              <%= post.user.nickname %><br>
            
              投稿日 <%= post.created_at.strftime('%Y/%m/%d')%>
          </span>
        </li>
      </ul>
  
  </div>  
<% end %>

<div class="sell-btn-contents">
  <%=link_to '戻る', root_path, class:"back-btn" %>
</div>

<%= render "shared/second-footer" %>
