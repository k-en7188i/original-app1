<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('header-main.png' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">オススメを入力</h2>
    <%= form_with model: @post, id: "new_post", local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 投稿画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        イチオシ画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">

        <div class="img-upload">
          <div id="previews"></div>
        </div>
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"post-image" %>
      </div>
    </div>
    <%# 投稿画像 %>
    <%# タイトルと投稿説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"タイトル（必須 30文字まで)", maxlength:"30" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          オススメポイント
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :content, class:"items-text", id:"item-info", placeholder:"投稿内容の説明:必須 200文字まで。" ,rows:"7" ,maxlength:"200" %>
      </div>
    </div>
    <%# タイトルと投稿説明 %>


    <%# 投稿内容の詳細 %>
    <div class="items-detail">
      <div class="weight-bold-text"></div>
      <div class="form">
        <div class="weight-bold-text">
          リンクURL
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :urllink, class:"items-text", id:"item-sales-status" %>
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"items-text", id:"item-category"}) %>
      </div>
    </div>
    <%# 注意書き %>
    <div class="caution">
      <p class="sentence">
        <a href="#">禁止されている投稿、</a>
        <a href="#">行為</a>
        を必ずご確認ください。
      </p>
      <p class="sentence">
        投稿記事のリンク先は必ずご記載ください。<br>
        <a href="#">他人の誹謗中傷</a>
        は犯罪とされ処罰される可能性があります。
      </p>
      <p class="sentence">
        また、出品をもちまして
        <a href="#">規約</a>
        に同意したことになります。
      </p>
    </div>
    <%# /注意書き %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "変更する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('header-main.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Wan-Coins.co.LTD
    </p>
  </footer>
</div>