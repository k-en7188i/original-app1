<%= form_with url: search_posts_path, local: true, method: :get, class: "search-form" do |form| %>
  <%= form.text_field :title, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<% if @posts.present? %>
  <div class="contents row">
    <%# @posts.each do |post| %>
      <%= render "shared/search", locals: { post: @post } %>
    <%# end %>
  </div>
<% end %>